@model List<Tasks>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row p-1">
        <div class="col-6">
            <h1>ToDo</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>
            </a>
        </div>
    </div>
    <table class="table">
        <tbody>
            @foreach(var obj in Model)
            {
            <tr class="row m-2">
                <td class="col-6 p-3">
                    <div class="h2">@obj.Title</div>
                    <div class="small">@obj.Date</div>
                    <div class="small">@obj.Time</div>
                </td>
                
                <td class="col-6 text-end align-content-center">
                    <a class="btn btn-primary me-3" asp-controller="Home" asp-route-id="@obj.Id" asp-action="CompleteTask">Done</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
